datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ProofreadingData {
  dataId Int @id @default(autoincrement())
  text   String
  rules  LintRule[]
  result LintResult[]
}

model LintRule {
  ruleId Int @id @default(autoincrement())
  ruleName  String
  proofreadingData ProofreadingData? @relation(fields: [proofreadingDataId], references: [dataId])
  proofreadingDataId Int?
}

model LintResult {
  resultId Int @id @default(autoincrement())
  message  String
  line     Int
  column   Int
  proofreadingData ProofreadingData? @relation(fields: [proofreadingDataId], references: [dataId])
  proofreadingDataId Int?
}